{
  "name": "playjack-automation",
  "version": "1.0.0",
  "description": "Web Automation Testing Framework for PlayJack.com",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test": "npx playwright test --project=chromium",
    "test:headed": "npx playwright test --project=chromium --headed",
    "test:registration": "npx playwright test tests/registration.spec.ts --project=chromium --headed",
    "playwright:report": "npx playwright show-report",
    "test:all": "npm run cy:run && npm run playwright:test",
    "test:reg": "npx playwright test playwright/tests/registration.spec.ts",
    "test:reg-headed": "npx playwright test playwright/tests/registration.spec.ts --headed",
    "test:login": "npx playwright test playwright/tests/login.spec.ts",
    "test:login-headed": "npx playwright test playwright/tests/login.spec.ts --headed",
    "test:bonus": "npx playwright test playwright/tests/bonus-history.spec.ts",
    "test:bonus-headed": "npx playwright test playwright/tests/bonus-history.spec.ts --headed",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.8.1",
    "cypress": "^14.5.4",
    "typescript": "^5.9.3"
  },
  "private": true
}
